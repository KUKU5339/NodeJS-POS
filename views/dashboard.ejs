<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - StreetPOS</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    *{box-sizing:border-box}
    body{margin:0;font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,Arial,sans-serif;background:#f4f5f7;color:#333}
    .topbar{display:flex;justify-content:space-between;align-items:center;padding:12px 16px;background:#800000;color:#fff;position:sticky;top:0;z-index:1000}
    .brand{font-weight:800}
    .topbar nav a{color:#fff;margin-left:16px;text-decoration:none}
    #offlineBanner{position:fixed;top:0;left:0;right:0;background:#c62828;color:#fff;padding:10px 16px;text-align:center;display:none;z-index:9999}
    .layout{display:flex;min-height:calc(100vh - 48px)}
    .sidebar{width:240px;background:#fff;border-right:1px solid #e5e7eb}
    .sidebar .title{padding:14px 16px;font-weight:700;color:#800000}
    .menu a{display:flex;align-items:center;gap:10px;padding:12px 16px;color:#333;text-decoration:none;border-left:4px solid transparent}
    .menu a.active{background:#fff7e6;border-left-color:#FFD700}
    .menu a:hover{background:#f8f9fa}
    .content{flex:1;padding:24px}
    h1{font-size:22px;color:#800000;margin:6px 0 20px}
    .grid-4{display:grid;grid-template-columns:repeat(4,1fr);gap:16px}
    .stat-card{background:#fff;border-radius:12px;padding:16px;border:1px solid #eee;box-shadow:0 2px 6px rgba(0,0,0,0.04);display:flex;gap:12px;align-items:center}
    .stat-icon{width:40px;height:40px;border-radius:10px;display:flex;align-items:center;justify-content:center;color:#fff}
    .stat-body h3{margin:0;font-size:12px;color:#6b7280;text-transform:uppercase;letter-spacing:.5px}
    .stat-value{font-size:22px;font-weight:800;color:#111}
    .stat-green{color:#16a34a}
    .section-card{background:#fff;border-radius:12px;padding:16px;border:1px solid #eee;box-shadow:0 2px 6px rgba(0,0,0,0.04);margin-top:20px}
    .section-header{display:flex;justify-content:space-between;align-items:center;margin-bottom:10px}
    .section-header h3{margin:0;font-size:16px;color:#333}
    .view-all-link{color:#800000;text-decoration:none;font-weight:600}
    .modern-table{width:100%;border-collapse:collapse}
    .modern-table thead tr{background:#f8f9fa;border-bottom:2px solid #dee2e6}
    .modern-table th{padding:12px;text-align:left;color:#800000;font-weight:600;font-size:12px;text-transform:uppercase}
    .modern-table td{padding:12px;border-bottom:1px solid #f0f0f0;color:#333}
    .grid-2{display:grid;grid-template-columns:1fr 1fr;gap:16px;margin-top:20px}
    .empty-state{text-align:center;padding:40px;color:#999}
    .skeleton{background:#eee;border-radius:8px}
    .skeleton-text{height:14px}
    .logout{cursor:pointer}
  </style>
</head>
<body>
  <div class="topbar">
    <div class="brand">StreetPOS</div>
    <nav>
      <a href="/dashboard">Dashboard</a>
      <a href="#" id="logout" class="logout">Logout</a>
    </nav>
  </div>
  <div id="offlineBanner"><i class="fas fa-wifi-slash"></i> You're Offline - Sales will sync when connected</div>
  <div class="layout">
    <aside class="sidebar">
      <div class="title">StreetPOS</div>
      <nav class="menu">
        <a class="active" href="/dashboard"><i class="fas fa-gauge"></i><span>Dashboard</span></a>
        <a href="/products"><i class="fas fa-boxes"></i><span>Products</span></a>
        <a href="/quick-sale"><i class="fas fa-bolt"></i><span>Quick Sale</span></a>
        <a href="/sales"><i class="fas fa-receipt"></i><span>Sales History</span></a>
        <a href="/profit"><i class="fas fa-calculator"></i><span>Profit Calculator</span></a>
        <a href="/stock-alerts"><i class="fas fa-bell"></i><span>Stock Alerts</span></a>
        <a href="/reports"><i class="fas fa-chart-line"></i><span>Sales Report</span></a>
      </nav>
    </aside>
    <main class="content">
      <h1>Dashboard</h1>
      <div class="grid-4">
        <div class="stat-card">
          <div class="stat-icon" style="background:#16a34a"><i class="fas fa-sack-dollar"></i></div>
          <div class="stat-body">
            <h3>Total Sales</h3>
            <div class="stat-value stat-green" id="totalSales"><div class="skeleton skeleton-text" style="width:120px"></div></div>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon" style="background:#3b82f6"><i class="fas fa-box"></i></div>
          <div class="stat-body">
            <h3>Products</h3>
            <div class="stat-value" id="productsCount"><div class="skeleton skeleton-text" style="width:60px"></div></div>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon" style="background:#f59e0b"><i class="fas fa-cart-shopping"></i></div>
          <div class="stat-body">
            <h3>Items Sold</h3>
            <div class="stat-value" id="itemsSold"><div class="skeleton skeleton-text" style="width:80px"></div></div>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon" style="background:#ef4444"><i class="fas fa-triangle-exclamation"></i></div>
          <div class="stat-body">
            <h3>Low Stock</h3>
            <div class="stat-value" id="lowStockCount"><div class="skeleton skeleton-text" style="width:40px"></div></div>
          </div>
        </div>
      </div>
    <div class="section-card">
      <div class="section-header">
        <h3><i class="fas fa-receipt"></i> Recent Sales</h3>
        <a href="/sales" class="view-all-link">View All â†’</a>
      </div>
      <table class="modern-table" id="recentSalesTable">
        <thead><tr><th>ID</th><th>Product</th><th>Qty</th><th>Total</th><th>Date</th></tr></thead>
        <tbody>
          <tr><td><div class="skeleton skeleton-text" style="width:40px"></div></td><td><div class="skeleton skeleton-text" style="width:120px"></div></td><td><div class="skeleton skeleton-text" style="width:30px"></div></td><td><div class="skeleton skeleton-text" style="width:60px"></div></td><td><div class="skeleton skeleton-text" style="width:120px"></div></td></tr>
          <tr><td><div class="skeleton skeleton-text" style="width:40px"></div></td><td><div class="skeleton skeleton-text" style="width:120px"></div></td><td><div class="skeleton skeleton-text" style="width:30px"></div></td><td><div class="skeleton skeleton-text" style="width:60px"></div></td><td><div class="skeleton skeleton-text" style="width:120px"></div></td></tr>
          <tr><td><div class="skeleton skeleton-text" style="width:40px"></div></td><td><div class="skeleton skeleton-text" style="width:120px"></div></td><td><div class="skeleton skeleton-text" style="width:30px"></div></td><td><div class="skeleton skeleton-text" style="width:60px"></div></td><td><div class="skeleton skeleton-text" style="width:120px"></div></td></tr>
        </tbody>
      </table>
    </div>
    <div class="grid-2">
      <div class="section-card">
        <div class="section-header">
          <h3><i class="fas fa-exclamation-triangle"></i> Low Stock Items</h3>
          <a href="/products" class="view-all-link">Manage â†’</a>
        </div>
        <div id="lowStockTableContent">
          <table class="modern-table">
            <thead><tr><th>Product</th><th>Stock Level</th></tr></thead>
            <tbody>
              <tr><td><div class="skeleton skeleton-text" style="width:70%"></div></td><td><div class="skeleton skeleton-text" style="width:60px"></div></td></tr>
              <tr><td><div class="skeleton skeleton-text" style="width:70%"></div></td><td><div class="skeleton skeleton-text" style="width:60px"></div></td></tr>
              <tr><td><div class="skeleton skeleton-text" style="width:70%"></div></td><td><div class="skeleton skeleton-text" style="width:60px"></div></td></tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="section-card">
        <div class="section-header">
          <h3><i class="fas fa-fire"></i> Top 5 Best Sellers</h3>
        </div>
        <div id="topProductsContent" class="empty-state"><i class="fas fa-box-open"></i><div>No data available</div></div>
      </div>
    </div>
    </main>
  </div>
  <script src="/app.js"></script>
  <script>
    window.addEventListener('DOMContentLoaded', async () => {
      const token = window.getToken();
      document.getElementById('logout').addEventListener('click', (e) => {
        e.preventDefault();
        localStorage.removeItem('nodepos_token');
        window.location.href = '/';
      });
      const stats = await window.apiGet('/api/dashboard/stats');
      if (stats) {
        const peso = 'â‚±' + Number(stats.totalSales || 0).toFixed(2);
        document.getElementById('totalSales').textContent = peso;
        document.getElementById('itemsSold').textContent = String(stats.totalItemsSold || 0);
        document.getElementById('productsCount').textContent = String(stats.totalProducts || 0);
      }
      const recent = await window.apiGet('/api/dashboard/recent-sales');
      if (recent && Array.isArray(recent.sales)) {
        const tbody = document.querySelector('#recentSalesTable tbody');
        tbody.innerHTML = recent.sales.map(s => '<tr><td>'+s.id+'</td><td>'+s.product_name+'</td><td>'+s.quantity+'</td><td>'+s.total+'</td><td>'+s.date+'</td></tr>').join('');
      }
      const low = await window.apiGet('/api/dashboard/low-stock');
      if (low) {
        document.getElementById('lowStockCount').textContent = String(low.count || 0);
      }
      if (low && Array.isArray(low.products)) {
        const container = document.getElementById('lowStockTableContent');
        container.innerHTML = '<table class="modern-table"><thead><tr><th>Product</th><th>Stock Level</th></tr></thead><tbody>' + low.products.map(i => '<tr><td>'+i.name+'</td><td>'+i.stock+'</td></tr>').join('') + '</tbody></table>';
      }
      const top = await window.apiGet('/api/dashboard/top-products');
      if (top && Array.isArray(top.products)) {
        const container = document.getElementById('topProductsContent');
        if (top.products.length > 0) {
          const medals = ['ðŸ¥‡','ðŸ¥ˆ','ðŸ¥‰'];
          let html = '<table class="modern-table"><thead><tr><th>Rank</th><th>Product</th><th>Total Sold</th></tr></thead><tbody>';
          html += top.products.map((p, i) => '<tr><td>'+ (i < 3 ? medals[i] : (i+1)) +'</td><td class="product-name">'+p.name+'</td><td><strong>'+p.total_sold+'</strong> items</td></tr>').join('');
          html += '</tbody></table>';
          container.innerHTML = html;
        }
      }
    });
  </script>
</body>
</html>
