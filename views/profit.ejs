<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profit Calculator - StreetPOS</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    *{box-sizing:border-box}
    body{margin:0;font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,Arial,sans-serif;background:#f4f5f7;color:#333}
    .topbar{display:flex;justify-content:space-between;align-items:center;padding:12px 16px;background:#800000;color:#fff}
    .brand{font-weight:800}
    .topbar nav a{color:#fff;margin-left:16px;text-decoration:none}
    .layout{display:flex;min-height:calc(100vh - 48px)}
    .sidebar{width:240px;background:#fff;border-right:1px solid #e5e7eb}
    .sidebar .title{padding:14px 16px;font-weight:700;color:#800000}
    .menu a{display:flex;align-items:center;gap:10px;padding:12px 16px;color:#333;text-decoration:none;border-left:4px solid transparent}
    .menu a.active{background:#fff7e6;border-left-color:#FFD700}
    .menu a:hover{background:#f8f9fa}
    .content{flex:1;padding:24px}
    h1{font-size:22px;color:#800000;margin:6px 0 20px}
    .card{background:#fff;border-radius:12px;padding:16px;border:1px solid #eee;box-shadow:0 2px 6px rgba(0,0,0,0.04)}
    .grid-3{display:grid;grid-template-columns:repeat(3,1fr);gap:16px}
    .stat{background:#fff;border:1px solid #eee;border-radius:12px;padding:16px}
    .stat h3{margin:0 0 8px 0;color:#6b7280;font-size:13px;text-transform:uppercase}
    .stat .value{font-size:22px;font-weight:800}
    .input{width:100%;padding:10px;border:1px solid #ddd;border-radius:8px}
    .btn{background:#800000;color:#fff;border:none;border-radius:8px;padding:10px 14px;cursor:pointer}
  </style>
</head>
<body>
  <div class="topbar">
    <div class="brand">StreetPOS</div>
    <nav>
      <a href="/dashboard">Dashboard</a>
      <a href="#" id="logout">Logout</a>
    </nav>
  </div>
  <div class="layout">
    <aside class="sidebar">
      <div class="title">StreetPOS</div>
      <nav class="menu">
        <a href="/dashboard"><i class="fas fa-gauge"></i><span>Dashboard</span></a>
        <a href="/products"><i class="fas fa-boxes"></i><span>Products</span></a>
        <a href="/quick-sale"><i class="fas fa-bolt"></i><span>Quick Sale</span></a>
        <a href="/sales"><i class="fas fa-receipt"></i><span>Sales History</span></a>
        <a class="active" href="/profit"><i class="fas fa-calculator"></i><span>Profit Calculator</span></a>
        <a href="/stock-alerts"><i class="fas fa-bell"></i><span>Stock Alerts</span></a>
        <a href="/reports"><i class="fas fa-chart-line"></i><span>Sales Report</span></a>
      </nav>
    </aside>
    <main class="content">
      <h1>Profit Calculator</h1>
      <div class="grid-3">
        <div class="stat">
          <h3>Total Revenue</h3>
          <div class="value" id="rev"><span class="skeleton skeleton-text"></span></div>
        </div>
        <div class="stat">
          <h3>Total Expenses</h3>
          <div class="value" id="exp">₱0.00</div>
        </div>
        <div class="stat">
          <h3>Estimated Profit</h3>
          <div class="value" id="profit"><span class="skeleton skeleton-text"></span></div>
        </div>
      </div>
      <div class="card" style="margin-top:16px">
        <h3 style="margin:0 0 8px 0;color:#333">Set Estimated Expenses</h3>
        <div style="display:flex;gap:8px;align-items:center">
          <input id="expenseInput" type="number" step="0.01" class="input" placeholder="Enter expenses (₱)">
          <button id="apply" class="btn">Apply</button>
        </div>
      </div>
    </main>
  </div>
  <script src="/app.js"></script>
  <script>
    function peso(n){return '₱' + Number(n||0).toFixed(2)}
    let revenue = 0;
    let expenses = 0;
    async function load(){
      const stats = await window.apiGet('/api/dashboard/stats');
      revenue = stats ? Number(stats.totalSales||0) : 0;
      document.getElementById('rev').textContent = peso(revenue);
      document.getElementById('profit').textContent = peso(Math.max(0, revenue - expenses));
    }
    window.addEventListener('DOMContentLoaded', () => {
      document.getElementById('logout').addEventListener('click', (e) => {
        e.preventDefault();
        localStorage.removeItem('nodepos_token');
        window.location.href = '/';
      });
      load();
      document.getElementById('apply').addEventListener('click', () => {
        expenses = Number(document.getElementById('expenseInput').value||0);
        document.getElementById('exp').textContent = peso(expenses);
        document.getElementById('profit').textContent = peso(Math.max(0, revenue - expenses));
      });
    });
  </script>
</body>
</html>
