<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sales Report - StreetPOS</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
  <style>
    *{box-sizing:border-box}
    body{margin:0;font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,Arial,sans-serif;background:#f4f5f7;color:#333}
    .topbar{display:flex;justify-content:space-between;align-items:center;padding:12px 16px;background:#800000;color:#fff}
    .brand{font-weight:800}
    .topbar nav a{color:#fff;margin-left:16px;text-decoration:none}
    .layout{display:flex;min-height:calc(100vh - 48px)}
    .sidebar{width:240px;background:#fff;border-right:1px solid #e5e7eb}
    .sidebar .title{padding:14px 16px;font-weight:700;color:#800000}
    .menu a{display:flex;align-items:center;gap:10px;padding:12px 16px;color:#333;text-decoration:none;border-left:4px solid transparent}
    .menu a.active{background:#fff7e6;border-left-color:#FFD700}
    .menu a:hover{background:#f8f9fa}
    .content{flex:1;padding:24px}
    h1{font-size:22px;color:#800000;margin:6px 0 20px}
    .card{background:#fff;border-radius:12px;padding:16px;border:1px solid #eee;box-shadow:0 2px 6px rgba(0,0,0,0.04)}
    .grid-2{display:grid;grid-template-columns:2fr 1fr;gap:16px}
    .stat{background:#fff;border:1px solid #eee;border-radius:12px;padding:16px}
    .stat h3{margin:0 0 8px 0;color:#6b7280;font-size:13px;text-transform:uppercase}
    .stat .value{font-size:22px;font-weight:800}
    .modern-table{width:100%;border-collapse:collapse}
    .modern-table thead tr{background:#f8f9fa;border-bottom:2px solid #dee2e6}
    .modern-table th{padding:12px;text-align:left;color:#800000;font-weight:600;font-size:12px;text-transform:uppercase}
    .modern-table td{padding:12px;border-bottom:1px solid #f0f0f0;color:#333}
    .empty-state{text-align:center;padding:40px;color:#999}
  </style>
</head>
<body>
  <div class="topbar">
    <div class="brand">StreetPOS</div>
    <nav>
      <a href="/dashboard">Dashboard</a>
      <a href="#" id="logout">Logout</a>
    </nav>
  </div>
  <div class="layout">
    <aside class="sidebar">
      <div class="title">StreetPOS</div>
      <nav class="menu">
        <a href="/dashboard"><i class="fas fa-gauge"></i><span>Dashboard</span></a>
        <a href="/products"><i class="fas fa-boxes"></i><span>Products</span></a>
        <a href="/quick-sale"><i class="fas fa-bolt"></i><span>Quick Sale</span></a>
        <a href="/sales"><i class="fas fa-receipt"></i><span>Sales History</span></a>
        <a href="/profit"><i class="fas fa-calculator"></i><span>Profit Calculator</span></a>
        <a href="/stock-alerts"><i class="fas fa-bell"></i><span>Stock Alerts</span></a>
        <a class="active" href="/reports"><i class="fas fa-chart-line"></i><span>Sales Report</span></a>
      </nav>
    </aside>
    <main class="content">
      <h1>Sales Report</h1>
      <div class="card">
        <div style="display:flex;gap:8px;align-items:center;margin-bottom:12px">
          <label>Start</label><input id="start" type="date">
          <label>End</label><input id="end" type="date">
          <button id="apply" class="btn" style="background:#800000;color:#fff;border:none;border-radius:8px;padding:10px 14px;cursor:pointer">Apply</button>
        </div>
        <div class="grid-2">
          <div class="stat">
            <h3>Total Revenue</h3>
            <div class="value" id="rev">‚Ç±0.00</div>
          </div>
          <div class="stat">
            <h3>Items Sold</h3>
            <div class="value" id="items">0</div>
          </div>
        </div>
      </div>
      <div class="card" style="margin-top:16px">
        <canvas id="chart" height="120"></canvas>
      </div>
      <div class="card" style="margin-top:16px">
        <div class="section-header"><h3>üèÜ Top Products</h3></div>
        <div id="topList" class="empty-state">No data</div>
      </div>
    </main>
  </div>
  <script src="/app.js"></script>
  <script>
    function peso(n){return '‚Ç±' + Number(n||0).toFixed(2)}
    async function fetchReport(start,end){
      const qs = '?start='+encodeURIComponent(start)+'&end='+encodeURIComponent(end);
      const data = await window.apiGet('/api/reports/daily'+qs);
      return data || { totalRevenue:0, totalItems:0, points:[], topProducts:[] };
    }
    function renderChart(points){
      const ctx = document.getElementById('chart');
      const labels = points.map(p=>p.date);
      const values = points.map(p=>p.total);
      new Chart(ctx, { type:'line', data:{ labels, datasets:[{ label:'Revenue', data:values, borderColor:'#800000', backgroundColor:'rgba(128,0,0,.1)' }] }, options:{ responsive:true, scales:{ y:{ beginAtZero:true } } } });
    }
    function renderTop(list){
      const el = document.getElementById('topList');
      if (!list || list.length===0) { el.innerHTML = '<div class="empty-state">No products sold</div>'; return; }
      el.innerHTML = '<table class="modern-table"><thead><tr><th>#</th><th>Product</th><th>Qty</th><th>Revenue</th></tr></thead><tbody>' +
        list.map((p,i)=>'<tr><td>'+(i+1)+'</td><td>'+p.name+'</td><td>'+p.quantity+'</td><td>'+peso(p.revenue)+'</td></tr>').join('') +
        '</tbody></table>';
    }
    window.addEventListener('DOMContentLoaded', async () => {
      document.getElementById('logout').addEventListener('click', (e) => {
        e.preventDefault();
        localStorage.removeItem('nodepos_token');
        window.location.href = '/';
      });
      const today = new Date().toISOString().slice(0,10);
      document.getElementById('start').value = today;
      document.getElementById('end').value = today;
      async function apply(){
        const s = document.getElementById('start').value;
        const e = document.getElementById('end').value;
        const data = await fetchReport(s,e);
        document.getElementById('rev').textContent = peso(data.totalRevenue||0);
        document.getElementById('items').textContent = String(data.totalItems||0);
        renderChart(data.points||[]);
        renderTop(data.topProducts||[]);
      }
      document.getElementById('apply').addEventListener('click', apply);
      apply();
    });
  </script>
</body>
</html>
