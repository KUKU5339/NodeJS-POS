<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sales History - StreetPOS</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    *{box-sizing:border-box}
    body{margin:0;font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,Arial,sans-serif;background:#f4f5f7;color:#333}
    .topbar{display:flex;justify-content:space-between;align-items:center;padding:12px 16px;background:#800000;color:#fff}
    .brand{font-weight:800}
    .topbar nav a{color:#fff;margin-left:16px;text-decoration:none}
    .layout{display:flex;min-height:calc(100vh - 48px)}
    .sidebar{width:240px;background:#fff;border-right:1px solid #e5e7eb}
    .sidebar .title{padding:14px 16px;font-weight:700;color:#800000}
    .menu a{display:flex;align-items:center;gap:10px;padding:12px 16px;color:#333;text-decoration:none;border-left:4px solid transparent}
    .menu a.active{background:#fff7e6;border-left-color:#FFD700}
    .menu a:hover{background:#f8f9fa}
    .content{flex:1;padding:24px}
    h1{font-size:22px;color:#800000;margin:6px 0 20px}
    .card{background:#fff;border-radius:12px;padding:16px;border:1px solid #eee;box-shadow:0 2px 6px rgba(0,0,0,0.04)}
    .toolbar{display:flex;gap:8px;align-items:center;margin-bottom:12px}
    .input{width:100%;padding:10px;border:1px solid #ddd;border-radius:8px}
    .modern-table{width:100%;border-collapse:collapse}
    .modern-table thead tr{background:#f8f9fa;border-bottom:2px solid #dee2e6}
    .modern-table th{padding:12px;text-align:left;color:#800000;font-weight:600;font-size:12px;text-transform:uppercase}
    .modern-table td{padding:12px;border-bottom:1px solid #f0f0f0;color:#333}
    .empty-state{text-align:center;padding:40px;color:#999}
  </style>
</head>
<body>
  <div class="topbar">
    <div class="brand">StreetPOS</div>
    <nav>
      <a href="/dashboard">Dashboard</a>
      <a href="#" id="logout">Logout</a>
    </nav>
  </div>
  <div class="layout">
    <aside class="sidebar">
      <div class="title">StreetPOS</div>
      <nav class="menu">
        <a href="/dashboard"><i class="fas fa-gauge"></i><span>Dashboard</span></a>
        <a href="/products"><i class="fas fa-boxes"></i><span>Products</span></a>
        <a href="/quick-sale"><i class="fas fa-bolt"></i><span>Quick Sale</span></a>
        <a class="active" href="/sales"><i class="fas fa-receipt"></i><span>Sales History</span></a>
        <a href="/profit"><i class="fas fa-calculator"></i><span>Profit Calculator</span></a>
        <a href="/stock-alerts"><i class="fas fa-bell"></i><span>Stock Alerts</span></a>
        <a href="/reports"><i class="fas fa-chart-line"></i><span>Sales Report</span></a>
      </nav>
    </aside>
    <main class="content">
      <h1>Sales History</h1>
      <div class="card">
        <div class="toolbar">
          <input id="search" class="input" placeholder="Search by product name...">
          <button id="refresh" class="btn secondary" style="display:none"></button>
        </div>
        <table class="modern-table">
          <thead><tr><th>ID</th><th>Product</th><th>Qty</th><th>Total</th><th>Date</th></tr></thead>
          <tbody id="salesBody"><tr><td colspan="5"><div class="empty-state">Loading...</div></td></tr></tbody>
        </table>
      </div>
    </main>
  </div>
  <script src="/app.js"></script>
  <script>
    async function load(){
      const data = await window.apiGet('/api/sales');
      const tbody = document.getElementById('salesBody');
      if (!data || !Array.isArray(data.sales)) {
        tbody.innerHTML = '<tr><td colspan="5"><div class="empty-state">Failed to load</div></td></tr>';
        return;
      }
      if (data.sales.length === 0) {
        tbody.innerHTML = '<tr><td colspan="5"><div class="empty-state">No sales yet</div></td></tr>';
        return;
      }
      const q = (document.getElementById('search').value || '').toLowerCase();
      const rows = data.sales.filter(s => !q || String(s.product_name).toLowerCase().includes(q)).map(s => (
        '<tr><td>'+s.id+'</td><td>'+s.product_name+'</td><td>'+s.quantity+'</td><td>'+s.total+'</td><td>'+s.date+'</td></tr>'
      ));
      tbody.innerHTML = rows.join('');
    }
    window.addEventListener('DOMContentLoaded', () => {
      document.getElementById('logout').addEventListener('click', (e) => {
        e.preventDefault();
        localStorage.removeItem('nodepos_token');
        window.location.href = '/';
      });
      load();
      document.getElementById('search').addEventListener('keyup', load);
    });
  </script>
</body>
</html>
